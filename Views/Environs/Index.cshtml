@model IEnumerable<BallGameMVC.Models.Environ>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnvName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnvLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnvTurfType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnvRegistrationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
