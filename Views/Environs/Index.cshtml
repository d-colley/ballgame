        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnvName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnvLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnvTurfType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnvRegistrationDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnvID">Edit</a> |
